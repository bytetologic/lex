{
  "name": "@apexo/type",
  "version": "0.0.2",
  "description": "TypeScript-first schema validation with seamless static type inference. Define your data contract once and safely validate its structure at run-time, from the browser to the server.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "sideEffects": false,
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --minify",
    "test": "jest",
    "prepublishOnly": "npm run build",
    "release": "pnpm publish --access public"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "types",
    "typescript",
    "javascript",
    "validation",
    "schema",
    "runtime",
    "type-inference",
    "data-validation",
    "data-contract",
    "static-types",
    "run-time",
    "data-structure",
    "forms",
    "api",
    "browser",
    "server",
    "backend",
    "validation-library"
  ],
  "author": "Lakshay Singh",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bytetologic/jstype.git"
  }
}